[{{ item.user }}]
user = {{ item.user }}
group = {{ item.user }}
listen = /run/php/php{{ php_version }}-fpm-{{ item.user }}.sock
listen.owner = {{ item.user }}
listen.group = {{ item.user }}
pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3
catch_workers_output = yes
php_flag[display_errors] = off
php_admin_flag[log_errors] = on
php_admin_value[error_log] = /var/log/php-fpm/{{ item.user }}/error.log
php_admin_value[session.save_path] = /var/lib/php/sessions/{{ item.user }}